<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_1_20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_dialog_search_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="100dp"
            android:layout_marginTop="54dp"
            android:src="@drawable/img_dialog_recommendation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_dialog_search_done_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="13dp"
            android:fontFamily="@font/pretendard_bold"
            android:text="분석중..."
            android:textColor="@color/main_purple"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/iv_dialog_search_done"
            app:layout_constraintStart_toStartOf="@id/iv_dialog_search_done"
            app:layout_constraintTop_toBottomOf="@id/iv_dialog_search_done" />

        <TextView
            android:id="@+id/tv_dialog_search_done_explain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/pretendard_medium"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="4dp"
            android:paddingBottom="54dp"
            android:text="오늘의 기분에 어울리는 노래를 \n 찾아드릴게요!"
            android:textColor="@color/gray04"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/tv_dialog_search_done_title"
            app:layout_constraintStart_toStartOf="@id/tv_dialog_search_done_title"
            app:layout_constraintTop_toBottomOf="@id/tv_dialog_search_done_title" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
